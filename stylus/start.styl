@import url("http://fonts.googleapis.com/css?family=Open+Sans:400,300")
@import url("http://fonts.googleapis.com/css?family=Droid+Sans:400,700");

body
  font-family 'Open Sans', sans-serif, arial
  font-size 1em
  margin 0
  padding 2em
  
header
  padding 2em

.left
  float left
.right
  float right
.inline
  display inline
.clearfix
  clear border-top 
.rounded
  border-radius 1em

h1
  font-family 'Droid Sans', 'Open Sans', sans-serif;
  font-size 3em
  font-weight 600
  line-height 1.5em
  margin 0
 
h2 
  font-size 2.3em
  font-weight 300
  line-height 1.5em
  margin 0

h3
  font-size 2em
  font-weight 300
  line-height 1.5em
  margin 0

h4
  font-size 1.5em
  font-weight 300
  line-height 1.5em
  margin 0

h5
  font-size 1.2em
  line-height 1.5em
  margin 0

hr
  border 0
  border-top 1px solid #ACACAC
  margin-bottom 20px
  margin-top 20px

label
  display block
  
sup
  top -0.5em

sub
  bottom -0.25em

audio,
canvas,
img,
video
    vertical-align middle

img
  border 0

textarea
  resize vertical
  display block
    
ul
  list-style none

ul li
  margin 1em

ul img, li img
  margin-right 1em

ol
  list-style-type none
  counter-reset li-counter

ol p:before
  content counter(li-counter)
  counter-increment li-counter
  padding 0.2em 0.5em
  z-index 1

ul.styled
  list-style circle

table
  border-spacing 0px
  display table-cell
  max-width 100%
  text-align center
  width 900px
  
thead:first-child, td:first-child
  text-align left
  width 300px

th,td,tr
  border-bottom 1px solid #A6A6A6
  margin 0
  padding 1em
  width 100%

tfoot
  background-color #EDEDEB
  color black
  font-weight bold
  
pre
  white-space pre-wrap
  
section
  clear both
  margin 1em 0em
  overflow hidden
  padding 0em

input,
button,
select,
textarea
  border 1px solid black
  color #272822
  font-family inherit
  font-size inherit
  line-height inherit
  padding 0.7em

select
  padding 0.5em

a
  color color-base
  text-decoration none
  &:hover,
  &:focus
    color black
  

.img-responsive
  display block
  height auto
  max-width 100%

.img-rounded
  border-radius: 6px
.img-circle
  border-radius: 50%

.img-thumbnail
  -webkit-transition all 0.2s ease-in-out
  background-color #ffffff
  border 1px solid #dddddd
  border-radius 4px
  display inline-block
  height auto
  line-height 1.428571429
  max-width 100%
  padding 4px
  transition all 0.2s ease-in-out
  
/* Overriding */
::selection
  background #61473A
  color #FFF
  
::-moz-selection /* Firefox */
  background #61473A 
  color #FFF

img.valign
   vertical-align middle

.wrap
  max-width main-width
  margin 0 auto

.alert
  border 1px solid #BFBFBF
  border-radius 5px
  font-size 0.8em
  margin 1em
  min-width 300px
  padding 0.8em

.alert--success
  background-color color-success
  border-color lighten(color-success, 20%)
  color darken(color-success, 80%)
.alert--error
  background-color color-error
  border-color lighten(color-error, 20%)
  color lighten(color-error, 90%)

.required
  color color-error
  font-size 0.8em

.full
  width 100%

input, textarea
  margin 1.2em 0

input.rounded, textarea.rounded
  border-radius 7px
  
input.small, textarea.small
  font-size 0.7em
  padding 0.5em
  
input[type="checkbox"], input[type="radio"]
  margin-right 1em
  
input[type="number"] {
    -moz-appearance:textfield;
}

.bg-twitter
  background color-twitter
  color white
  padding 1em
  
.bg-facebook
  background color-facebook
  color white
  padding 1em
  
.bg-googleplus
  background color-googleplus
  color white
  padding 1em