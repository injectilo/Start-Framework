/** Buttons **/

.btn
  font-family 'Open Sans', Arial, sans-serif
  line-height 2.25em
  color #262626
  text-align center
  vertical-align middle
  font-size 0.8em
  white-space nowrap
  background-color color-base
  cursor pointer
  border 0
  margin 0
  padding 0.3em 2em
  min-width 40px

.btn--small
  text-align center
  vertical-align middle
  font-size 0.8em
  white-space nowrap
  margin 0
  padding 0.2em 1em
  transition(0.3s)
  &:hover
    text-decoration none
    background-color darken(color-base,50%)
    color white
  &:active,
  &:focus
    outline none

.btn--medium
  text-align center
  vertical-align middle
  font-size 1em
  white-space nowrap
  padding 0.3em 2em
  transition()
  &:hover
    text-decoration: none
    background-color: darken(color-base,50%)
    color: white
  &:active,
  &:focus
    outline none

.btn--large
  text-align center
  vertical-align middle
  font-size 1em
  white-space nowrap
  padding 0.6em 4.2em
  transition()
  &:hover
    text-decoration none
    background-color darken(color-base,50%)
    color white
  &:active,
  &:focus
    outline none

.btn--secondary
  text-align center
  vertical-align middle
  font-size 0.9em
  white-space nowrap
  margin 0
  padding 0.5em 2.5em
  color white
  background-color color-base2
  &:hover
    text-decoration none
    background-color darken(color-base2,15%)
  &:active,
  &:focus
    outline none
  transition()

.btn--alert
  text-align center
  vertical-align middle
  font-size 0.9em
  white-space nowrap
  margin 0
  padding 0.5em 2.5em
  color white
  background-color color-error
  &:hover
    text-decoration none
    background-color lighten(color-error,15%)
  &:active,
  &:focus
    outline none
  transition()

.btn--ghost
  line-height 2.25em
  color color-base
  background-color transparent
  text-align center
  vertical-align middle
  font-size 1em
  border 1px solid color-base
  white-space nowrap
  font-weight bold
  margin 0
  padding 0.3em 3em
  transition(0.7s)
  &:hover
    text-decoration none
    background-color color-base
    color white
  &:active,
  &:focus
    outline none
